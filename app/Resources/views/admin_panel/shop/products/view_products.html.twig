{% extends 'admin_panel/base.html.twig' %}

{% block body %}

    {% include ('admin_panel/shop/products/view_products_category_nav.html.twig') %}

    <section class="content">
        <div class="container-fluid">
            <div class="row">

                {% for product in products %}
                    {{ include('admin_panel/shop/products/modals/product_settings_modal.html.twig') }}
                    <div class="col-12 col-sm-6 col-md-3">
                        <div class="info-box">
                            <button type="button" class="btn btn-outline-secondary position-absolute btn-sm" data-toggle="modal" data-target="#modalFor{{ product.id }}">
                                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-gear-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" d="M9.405 1.05c-.413-1.4-2.397-1.4-2.81 0l-.1.34a1.464 1.464 0 0 1-2.105.872l-.31-.17c-1.283-.698-2.686.705-1.987 1.987l.169.311c.446.82.023 1.841-.872 2.105l-.34.1c-1.4.413-1.4 2.397 0 2.81l.34.1a1.464 1.464 0 0 1 .872 2.105l-.17.31c-.698 1.283.705 2.686 1.987 1.987l.311-.169a1.464 1.464 0 0 1 2.105.872l.1.34c.413 1.4 2.397 1.4 2.81 0l.1-.34a1.464 1.464 0 0 1 2.105-.872l.31.17c1.283.698 2.686-.705 1.987-1.987l-.169-.311a1.464 1.464 0 0 1 .872-2.105l.34-.1c1.4-.413 1.4-2.397 0-2.81l-.34-.1a1.464 1.464 0 0 1-.872-2.105l.17-.31c.698-1.283-.705-2.686-1.987-1.987l-.311.169a1.464 1.464 0 0 1-2.105-.872l-.1-.34zM8 10.93a2.929 2.929 0 1 0 0-5.86 2.929 2.929 0 0 0 0 5.858z"/>
                                </svg>
                            </button>
                            <img src="{{ asset('uploads/' ~ product.image) }}" class="img-fluid w-50" alt="Product image">
                            <div class="info-box-content">
                                <span class="font-weight-bold"> {{ product.title }}
                                    {% if product.promotion %}
                                        <span class="badge badge-danger">promo</span>
                                    {% endif %}
                                </span>
                                <p class="text-info small">
                                    in {% if product.category.parent %}
                                        {{ product.category.parent.name }} /
                                    {% endif %}
                                    {{ product.category.name }}
                                </p>
                                <p>{{ product.summary }} <a href="#" class="small"> Read more</a></p>
                                <p>
                                    {% if product.promotion %}
                                        <del>Price: {{ product.price }} BGN</del> <br />
                                        <span class="text-danger font-weight-bold"> Price: {{ product.finalPrice }} BGN (-{{ product.promotion.percentage }}<span class="small">%</span>)</span>
                                    {% else %}
                                        Price: {{ product.finalPrice }} BGN
                                    {% endif %}
                                </p>
                                <div>
                                    <a href="{{ path('admin_products_view_by_id', {'id': product.id}) }}" class="btn btn-outline-info btn-sm">View</a>
                                    <a href="#" class="btn btn-outline-success btn-sm">Edit</a>
                                    <a href="#" class="btn btn-outline-danger btn-sm">Delete</a>


                                </div>
                            </div>
                        </div>
                        <!-- /.info-box -->
                    </div>

                {% endfor %}

            </div>
        </div>
    </section>
{% endblock %}