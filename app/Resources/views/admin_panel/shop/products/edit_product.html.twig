{% extends 'admin_panel/base.html.twig' %}

{% block body %}

    <!-- Content Wrapper. Contains page content -->
    <!-- Content Header (Page header) -->

    <!-- Main content -->
    <section class="content">
        <div class="row mt-3">
            <div class="col-md-6">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">General</h3>

                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip"
                                    title="Collapse">
                                <i class="fas fa-minus"></i></button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="card card-solid">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-12 col-sm-6">
                                        <div class="col-12">
                                            <img src="{{ asset('uploads/' ~ product.image ) }}"
                                                 class="product-image img-fluid w-50"
                                                 alt="Product Image">

                                        </div>
                                    </div>
                                    <div class="col-12 col-sm-6">
                                        <h3 class="my-3">{{ product.title }}
                                            {% if product.promotion %}
                                                <span class="badge badge-danger">promo</span>
                                            {% endif %}
                                        </h3>
                                        <p>{{ product.description }}</p>
                                        <hr>

                                        <div class="bg-gray py-2 px-3 mt-4">
                                            <h2 class="mb-0">
                                                {% if product.promotion %}
                                                    <del>Price: {{ product.price|number_format(2) }} BGN</del> <br/>
                                                    <span class="text-danger font-weight-bold"> Price: {{ product.finalPrice|number_format(2) }} BGN (-{{ product.promotion.percentage }}<span
                                                                class="small">%</span>)</span>
                                                {% else %}
                                                    Price: {{ product.finalPrice|number_format(2) }} BGN
                                                {% endif %}
                                            </h2>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Current specifications</h3>

                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip"
                                    title="Collapse">
                                <i class="fas fa-minus"></i></button>
                        </div>
                    </div>
                    <div class="card-body">
                        <form action="{{ path('admin_products_edit', {'id': product.id}) }}" method="post">
                            <label>Product Title</label>
                            <div class="form-group">
                                <input type="text" name="product[title]" class="form-control"
                                       value="{{ product.title }}"/>
                            </div>
                            <label>Product Description</label>
                            <div class="form-group">
                                <textarea class="form-control" name="product[description]"
                                          rows="10">{{ product.description }}</textarea>
                            </div>
                            <label>Product Price</label>
                            <div class="form-group">
                                <input type="text" name="product[price]" class="form-control"
                                       value="{{ product.price|number_format(2) }}">
                            </div>
                            <label>Product Category</label>
                            <div class="form-group">
                                {{ form_widget(form.category, { 'value': product.category.id ~ "" }) }}
                            </div>
                            <input type="hidden" value="{{ product.image }}" name="product[image]">

                            <input type="submit" name="save" class="form-control">
                            {#                            {{ form_widget(form.save, {'label': 'Edit product'}) }}#}
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}