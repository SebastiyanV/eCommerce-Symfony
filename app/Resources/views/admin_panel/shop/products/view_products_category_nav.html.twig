

<div class="row">
    <div class="col-md-12">
        <div class="card card-light collapsed-card">
            <div class="card-header">
                <h3 class="card-title">Categories</h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-plus"></i>
                    </button>
                </div>
                <!-- /.card-tools -->
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <div class="row ml-3 mb-2">
                    {% for category in categoryService.all if category.parent == false %}
                        <div class="col-12 col-sm-3 col-md-1">
                            <a href="{{ path('admin_products_view_by_category_id', {'id': category.id}) }}" class="text-muted">{{ category.name }}</a>
                            {% for subcategory in category.children %}
                                <br />        -> <a href="{{ path('admin_products_view_by_category_id', {'id': subcategory.id}) }} " class="text-muted">{{ subcategory.name }}</a>
                            {% endfor %}
                        </div>
                    {% endfor %}
                </div>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.col -->
</div>